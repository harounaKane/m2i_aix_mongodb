    <%- include("../header") %>

    <main class="container">
        <h2 class="text-center">Update avion</h2>
    <form method="POST" action="/api/avion/<%= avion._id %>?_method=PUT">
        <div class="mb-3">
            <label for="" class="form-label">Modèle</label>
            <input type="text" value="<%= avion.model %>" name="model" class="form-control" id="" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label for="" class="form-label">Compagnie</label>
            <input type="text" value="<%= avion.compagnie %>" name="compagnie" class="form-control" id="">
        </div>
        
        <div class="mb-3">
            <label for="cpt" class="form-label">Capacité</label>
            <input type="text" value="<%= avion.capacite %>" name="capacite" class="form-control" id="cpt">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    </main>
</body>
</html>
